<main>
  <h1>Task: <%= @task.name %></h1>

  <ul>
      <li>description: <%= @task.description %></li>
      <li>completed: <%= @task.completion_status ? "yes" : "no" %></li>
      <li>completed at: <%= datetime_formatter(@task) %></li>
  </ul>
  <%= link_to "Edit this task", tasks_edit_path(@task) %>
  <%= link_to "Return to Tasks List", tasks_path %>
</main>
