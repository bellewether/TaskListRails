<%= form_for @task do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completion_status %>
  <%= f.radio_button :completion_status, true %>

  <%= f.label :completed_at %>
  <%= f.datetime_field :completed_at %>

  <%= f.submit "Submit" %>
<% end %>
