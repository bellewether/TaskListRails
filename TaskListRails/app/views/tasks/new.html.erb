<%= form_for @task do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completion_status %>
  <%= f.check_box :completion_status %>

  <%= f.label :completed_at %>
  <%= f.date_field :completed_at %>

  <%= f.submit "Submit" %>
<% end %>
